<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/item_background_selector"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Texto del nombre del dato (Tipo de Dato) -->
    <TextView
        android:id="@+id/textNombreDato"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Tipo de Dato" />

    <!-- Texto de la cantidad del dato -->
    <TextView
        android:id="@+id/textCantidadDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="Cantidad" />

    <!-- Texto de la unidad del dato -->
    <TextView
        android:id="@+id/textUnidadDato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:text="Unidad" />
</LinearLayout>